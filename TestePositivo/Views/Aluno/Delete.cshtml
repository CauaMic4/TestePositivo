@model TestePositivo.Models.AlunoModel

@{
    ViewData["Title"] = "Delete";
}

<div class="">
    <h1>Delete</h1>

    <h3>Deseja realmente excluir este Aluno?</h3
</div>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome Completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class = "col-sm-2">
            Data de nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Serie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Serie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Segmento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Segmento)
        </dd>
        <dt class = "col-sm-2">
            Nome do Pai
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomePai)
        </dd>
        <dt class = "col-sm-2">
            Nome da Mãe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeMae)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">voltar para a lista</a>
    </form>
</div>
