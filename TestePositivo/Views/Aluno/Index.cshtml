@model IEnumerable<TestePositivo.Models.AlunoModel>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1>Alunos</h1>
    </br></br>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar novo Aluno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome Completo
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                Serie
            </th>
            <th>
                Segmento
            </th>
            <th>
                Nome do Pai
            </th>
            <th>
                Nome da Mãe
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Segmento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomePai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeMae)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
