@model TestePositivo.Models.HomeModel

@{
    ViewData["Title"] = "Home Page";
}

<h1>Home</h1>

<h2>Alunos</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Data de Nascimento</th>
            <th>Série</th>
            <th>Segmento</th>
            <th>Nome do Pai</th>
            <th>Nome da Mãe</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model.Alunos)
        {
            <tr>
                <td>@aluno.NomeCompleto</td>
                <td>@aluno.DataNascimento.ToShortDateString()</td>
                <td>@aluno.Serie</td>
                <td>@aluno.Segmento</td>
                <td>@aluno.NomePai</td>
                <td>@aluno.NomeMae</td>
            </tr>
        }
    </tbody>
</table>

<h2>Endereços</h2>
<table class="table">
    <thead>
        <tr>
            <th>Aluno</th>
            <th>Tipo</th>
            <th>Rua</th>
            <th>CEP</th>
            <th>Número</th>
            <th>Complemento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var endereco in Model.Enderecos)
        {
            <tr>
                <td>@(endereco.Aluno?.NomeCompleto ?? "Desconhecido")</td>
                <td>@endereco.Tipo</td>
                <td>@endereco.Rua</td>
                <td>@endereco.CEP</td>
                <td>@endereco.Numero</td>
                <td>@endereco.Complemento</td>
            </tr>
        }
    </tbody>
</table>

